<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_register_background"
    tools:context=".MainActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:drawableLeft="@mipmap/login_icon_phone"
        android:id="@+id/login_user"
        android:hint="     手机号"
        android:background="@drawable/edit_bg"
        android:textColorHint="#ccc"
        />

    <EditText
        android:id="@+id/login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_user"
        android:layout_marginLeft="36dp"
        android:drawableLeft="@mipmap/login_icon_lock"
        android:hint="     登录密码"
        android:layout_marginTop="16dp"
        android:password="true"
        android:textColorHint="#ccc"
        android:background="@drawable/edit_bg"
        android:layout_marginRight="36dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_icon_eye"
        android:layout_alignRight="@id/login_user"
        android:layout_marginTop="210dp"
        android:id="@+id/login_eye"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:textColor="#ccc"
        android:layout_below="@id/login_pwd"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="36dp"
        android:id="@+id/login_check"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快速注册"
        android:textColor="#ccc"
        android:layout_below="@id/login_pwd"
        android:layout_marginTop="20dp"
        android:id="@+id/login_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50sp"
        />
    <Button
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="登录"
        android:background="#fff"
        android:textColor="#f0f"
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        />

</RelativeLayout>